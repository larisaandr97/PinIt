@model Pinterest.Models.Category
@{
    ViewBag.Title = "New category";
}


<h2>@ViewBag.Title</h2>

@if (TempData.ContainsKey("message"))
{
    <h4 class="alert alert-info" role="alert"> @ViewBag.message</h4>
}
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Category"))
{
    @Html.Label("CategoryName", "Name")
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br /><br />
    <button class="btn btn-sm btn-success" type="submit">Add category</button>
}

