@model Pinterest.Models.Category
@{
    ViewBag.Title = "Edit category";
}

<form method="post" action="/Category/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.CategoryId)
    <br />
    @Html.Label("CategoryName", "Name")
    <br />

    @Html.EditorFor(m => m.CategoryName)
    <br /><br />
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-sm btn-success" type="submit">Modify category</button>
</form>

<hr />
<a href="/Category/Index"> Back to categories</a>
<br />
<a href="/Category/New"> Add another category </a>
<br />

